<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:ems">25</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">text</item>
        <item name ="android:background">@color/secondaryColor</item>
        <item name ="android:padding">@dimen/standard_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>

    </style>

    <style name="textView">
        <item name="android:ems">25</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name ="android:background">@color/secondaryLightColor</item>
        <item name ="android:padding">@dimen/standard_margin</item>
        <item name ="android:freezesText">true</item>
    </style>

    <style name="textViewHeader">
        <item name="android:ems">25</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standard_margin</item>
        <item name="android:layout_marginBottom">@dimen/standard_margin</item>
        <item name="android:layout_margin">@dimen/standard_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name ="android:background">@color/white</item>
        <item name ="android:padding">@dimen/standard_margin</item>
        <item name ="android:freezesText">true</item>
    </style>


</resources>